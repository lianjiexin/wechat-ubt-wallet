.space {
  width     : 100vw;
  height    : 16rpx;
  background: #F4F5F9;
}

.line {
  width      : 718px;
  height     : 1px;
  background : #EEEEEE;
  margin-left: 32rpx;
}

page,
view,
image,
input {
  display   : block;
  box-sizing: border-box;
}

.asset {
  width          : 100%;
  display        : flex;
  justify-content: center;
  border-top     : 1px solid #eee;
  padding-top    : 20rpx;
  padding-bottom : 20rpx;
}

.asset .item {
  display       : flex;
  flex-direction: column;
  width         : 50%;
  text-align    : center;
  font-size     : 13px;
  line-height   : 20px;
  color         : #333;
}

.asset .right {
  border-left: 1px solid #eee;
}

/* flex重新构建菜单 */
.menu-item {
  width          : 100vw;
  height         : 104rpx;
  padding        : 0 32rpx;
  background     : #fff;
  display        : flex;
  justify-content: space-between;
  align-items    : center;
  border-bottom  : 1px solid #eee;
  position       : relative;
}

.menu-items {
  border-top: 0px;
}

.menu-item .l {
  font-size  : 5vw;
  color      : #333;
  line-height: 104rpx;
}

.menu-item .l span {
  font-size: 4vw;
  color    : #999;
}

.menu-item .r {
  font-size   : 4vw;
  color       : #000;
  line-height : 104rpx;
  margin-right: 10%;
}

.menu-item .next {
  width   : 40rpx;
  height  : 40rpx;
  position: absolute;
  top     : 30%;
  left    : 90%;
  z-index : 9999;
}