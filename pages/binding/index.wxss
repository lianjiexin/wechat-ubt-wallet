.el-from-input {
  width        : 98%;
  margin       : 0px auto;
  margin-top   : 5px;
  margin-bottom: 5px;
  padding      : 0;
}

.el-from-input:first-child {
  margin-top: 15px;
}

.el-from-input .el-label {
  width    : 98%;
  margin   : auto;
  padding  : 5px 0;
  font-size: 4vw;
}

.el-from-input .el-input {
  width : 98%;
  margin: auto;

}

.el-from-input input {
  padding      : 2px 5px;
  border       : 1px solid #999;
  border-radius: 6px;
  font-size    : 5vw;
}

.el-from-input input:hover {
  border: 1px solid #3F6991;
}


.el-from-button {
  width        : 98%;
  margin       : auto;
  margin-top   : 30px;
  margin-bottom: 10px;
  
}

.el-from-button .el-button {
  width         : 50%;
  text-align    : center;
  margin        : auto;
  margin-top    : 5px;
  margin-bottom : 5px;
  padding-top   : 2px;
  padding-bottom: 2px;
  font-size    : 4vw;
}

.el-from-button .el-button:first-child {
  border          : 1px solid rgba(0, 0, 0, 0.2);
  color           : #FFFFFF;
  background-color: #1AAD19;
}

