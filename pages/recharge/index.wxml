<view class="container">
  <view class="asset">
        <view class='item'>
      <view>{{ubt}}</view>
      <view>UBT</view>
    </view>
    <!-- <view class='item right' bindtap='goUBT'> -->
    <view class='item right'>
      <view>当前等值于</view>
      <view> {{rmb}} RMB </view>
    </view>
  </view>
  <form bindsubmit="bindSave">
    <view class="form-box">
      <view class="row-wrap">
        <view class="label">提取RMB</view>
        <view class="label-right">
          <input name="amount" class="input" type="digit" value="{{amount}}" placeholder="至少提现 {{recharge_amount_min}} 元" />
        </view>
      </view>
    </view>

    <block wx:if='{{rechargeSendRules}}'>
      <view class="charge-rule-wrap">
        <block wx:for='{{rechargeSendRules}}' wx:for-item="item">

          <!-- <button  class='font charge-detail' bindtap="rechargeAmount" data-confine="{{item.confine}}" data-send="{{item.send}}">
                  <text>充{{item.confine}}送{{item.send}}</text>
                </button> -->
          <view class="btn charge-detail" bindtap="rechargeAmount" data-confine="{{item.confine}}" data-send="{{item.send}}">
            <text>充{{item.confine}}</text>
            <text>送{{item.send}}</text>
          </view>
        </block>

      </view>
    </block>

    <button type="warn" class="save-btn" formType="submit">立即提现</button>
  </form>
  <form bindsubmit="bindSave">
    <view class="form-box">
      <view class="row-wrap">
        <view class="label">购买京东礼品卡</view>
        <view class="label-right">
          <input name="amount" class="input" type="digit" value="{{amount}}" placeholder="最小额度 {{recharge_amount_min}} 元" />
        </view>
      </view>
    </view>

    <block wx:if='{{rechargeSendRules}}'>
      <view class="charge-rule-wrap">
        <block wx:for='{{rechargeSendRules}}' wx:for-item="item">

          <!-- <button  class='font charge-detail' bindtap="rechargeAmount" data-confine="{{item.confine}}" data-send="{{item.send}}">
                  <text>充{{item.confine}}送{{item.send}}</text>
                </button> -->
          <view class="btn charge-detail" bindtap="rechargeAmount" data-confine="{{item.confine}}" data-send="{{item.send}}">
            <text>充{{item.confine}}</text>
            <text>送{{item.send}}</text>
          </view>
        </block>

      </view>
    </block>

    <button type="warn" class="save-btn" formType="submit">提交礼品卡订单</button>
  </form>
</view>
