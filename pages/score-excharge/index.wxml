<view class="container">
    <view class="asset">
        <view class='item'>
            <view>UBT</view>
            <view>{{maxUbt}}</view>
        </view>
        <view class='item right'>
            <view>{{name}}</view>
            <view>{{maxNumber}}</view>
        </view>
    </view>
    <view class="space"></view>
    <form bindsubmit="bindSave">
        <view class="form-box">
            <view class="row-wrap">
                <view class="label">兑换权证</view>
                <view class="label-right">
                    <input name="amount" class="input" value="{{ubt}}" type="text" placeholder="请输入兑换数量" />
                </view>
            </view>
        </view>
        <button type="warn" class="save-btn" formType="submit">立即兑换</button>
    </form>
    <form bindsubmit="bindSave1">
        <view class="form-box">
            <view class="row-wrap">
                <view class="label">兑换UBT</view>
                <view class="label-right">
                    <input name="score" class="input" type="text" value="{{number}}" placeholder="请输入兑换数量" />
                </view>
            </view>
        </view>
        <button type="warn" class="save-btn" formType="submit">立即兑换</button>
    </form>
</view>